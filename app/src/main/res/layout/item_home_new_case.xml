<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_type_topic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_topic_pic"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/iv_topic_tit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_topic_pic"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/iv_topic_pic"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="警惕!以“新冠疫苗”之名诈骗来袭!"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/iv_topic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_topic_pic"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/iv_topic_pic"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="北京市海淀区派出所 2021-01-15"
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line" />
</LinearLayout>
