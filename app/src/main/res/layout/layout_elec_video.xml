<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <FrameLayout
        android:id="@+id/fl_vedio_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/white_corner"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="视频"
            android:textColor="@color/_333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_upload_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_100"
            android:layout_marginEnd="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="end|center_vertical"
            android:lines="1"
            android:text="@string/to_select"
            android:textColor="#999999"
            android:textSize="@dimen/sp_16"
            app:drawableRightCompat="@mipmap/arrow_gray_right" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff9f8"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="无法直接上传线索"
            android:textColor="#999999"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_record_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="110dp"
            android:text="录制帮助"
            android:textColor="#2946e6"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="@drawable/bg_record_now"
            android:gravity="center"
            android:text="立即录制"
            android:textColor="#ee2222"
            android:textSize="@dimen/sp_13" />
    </FrameLayout>
</LinearLayout>
